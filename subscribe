<!DOCTYPE html>
<html>
<head>
  <style>
    .form-container {
      text-align: center;
      max-width: 400px;
      margin: auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #f9f9f9;
    }
    .form-container h2 {
      font-size: 1.5em;
      margin-bottom: 10px;
    }
    .form-container input[type="email"] {
      padding: 10px;
      font-size: 1em;
      width: calc(100% - 22px);
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .form-container input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 1em;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 5px;
    }
    .form-container p {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Subscribe to our newsletter plus tips, advice, and events:</h2>
    <form id="subscribeForm">
      <input type="email" id="email" name="email" placeholder="Enter email here..." required>
      <input type="submit" value="Subscribe">
      <p id="response"></p>
    </form>
  </div>

  <script>
    document.getElementById('subscribeForm').addEventListener('submit', function(event) {
      event.preventDefault();
      var email = document.getElementById('email').value;
      var responseElement = document.getElementById('response');
      var url = 'https://script.google.com/macros/s/AKfycbzS3h9_UH_Z21xIVHPopEnW31P2pKQ_kf1YoWdJ4AvbBM2U07byE1ah6lLGIF7Dpkrl/exec'; // Replace with your Google Apps Script URL

      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'email=' + encodeURIComponent(email),
      })
      .then(response => response.text())
      .then(data => {
        responseElement.textContent = data;
      })
      .catch(error => {
        responseElement.textContent = 'Error: ' + error.message;
        console.error('There was a problem with the fetch operation:', error);
      });
    });
  </script>
</body>
</html>
